<Page
    x:Class="EE_Calculator.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:models="using:EE_Calculator.Models"
    xmlns:controls="using:EE_Calculator.Controls"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea">
        <winui:TabView
            x:Name="TabView"
            AllowDropTabs="True"
            CanReorderTabs="True"
            CanDragTabs="True"
            TabItemsSource="{x:Bind ViewModel.Tabs, Mode=OneWay}"
            SelectedItem="{Binding SelectedTab, Mode=TwoWay}"
            AddTabButtonCommand="{x:Bind ViewModel.AddTabCommand}"
            TabCloseRequested="TabView_TabCloseRequested">
            <winui:TabView.TabItemTemplate>
                <DataTemplate x:DataType="models:TabViewItemData">
                    <winui:TabViewItem
                        Header="{x:Bind Header}"
                        AutomationProperties.Name="{x:Bind Header}"
                        IsClosable="True">
                        <winui:TabViewItem.Content>
                            <ContentPresenter Content="{x:Bind Content}" />
                        </winui:TabViewItem.Content>
                    </winui:TabViewItem>
                </DataTemplate>
            </winui:TabView.TabItemTemplate>
        </winui:TabView>
    </Grid>
</Page>

